{
  "name": "recoil-persist",
  "version": "0.3.1",
  "description": "Package for recoil to persist and rehydrate store",
  "main": "index.js",
  "repository": "git@github.com:polemius/recoil-persist.git",
  "author": "Ivan Menshykov <ivan.menshykov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\"",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "yarn prettier -- --write",
    "check-format": "yarn prettier -- --list-different",
    "test": "jest",
    "validate": "yarn lint && yarn check-format && yarn test",
    "start": "parcel serve --cache-dir test/demo/.cache -d test/demo/dist test/demo/index.html --open"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@testing-library/react": "^10.0.4",
    "babel-jest": "^26.0.1",
    "clean-publish": "^1.1.7",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.4",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "recoil": "^0.0.7"
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "100 B"
    }
  ],
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
